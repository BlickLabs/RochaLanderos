.homepage-hero
  height calc(95vh - 72px)
  min-height 350px

  @media screen and (orientation: portrait)
    @media screen and (min-height: 400px) and (min-width: 400px)
      max-height 76vw

.homepage-hero
  background-image url('../img/backgrounds/home-hero-bg.jpg')

.homepage-hero__content
  color white
  text-align center
  flex-basis 90%

.homepage-hero__title
  font-size remify(39)
  letter-spacing remify(0.6)
  margin 0

.homepage-hero__subtitle
  font-size remify(14)
  letter-spacing remify(1.9)
  text-transform uppercase

.homepage-introduction
  background white
  padding-bottom remify(65)
  padding-top remify(74)

.homepage-introduction__text
  color #636363
  font-size remify(16)
  letter-spacing remify(0.2)
  line-height 1.38
  max-width 581px
  margin 0
  center-block()
  text-align center
  width 90%

  &::before, &::after
    background #262346
    center-block()
    content ' '
    display block
    height 2px
    width 28px

  &::before
    margin-bottom remify(29)

  &::after
    margin-top remify(43)