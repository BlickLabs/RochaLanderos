footer
  background #eaeaea
  padding-top remify(45)
  padding-bottom remify(37)

.footer-logo
  width remify(48)

.footer-copyright
  margin-top remify(41)
  line-height 2.6
  letter-spacing remify(0.1)
  display block
  text-align center
  color #6d6d6d
  font-size 10px

.footer-inner
  align-items flex-start
  width 90%
  center-block()
  display flex
  max-width 930px
  justify-content space-between

.footer-inner__nav
  display flex
  margin-left remify(56)
  margin-right remify(63)
  margin-top remify(-6)

.footer-inner__nav-column
  list-style none
  margin 0
  padding 0

  &:not(:first-child)
    margin-left remify(84)

.footer-inner__nav-item
  line-height 2.6
  font-size 10px
  text-transform uppercase
  letter-spacing 0.8px

.footer-inner__nav-item
  color #656565

  a
    color inherit

  .fa::before
    background #0e0a2d
    border-radius 50%
    color white
    display inline-block
    height 16px
    font-size 9px
    line-height 16.6px
    margin-right 10px
    text-align center
    width 16px

.footer-inner__nav-item--header
  color #0e0a23

.footer-inner__newsletter
  flex-basis 345px

#footer-newsletter-form input
  background transparent
  border solid 1px #656565
  text-transform uppercase
  color #656565
  font-size 10px
  line-height 1
  letter-spacing 0.8px
  padding 1.5em
  width 100%